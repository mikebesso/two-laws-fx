{
  "name": "two-laws-fx",
  "version": "0.1.0",
  "description": "A minimal boilerplate for building a react component for npm, including a demo page.",
  "main": "lib/index.js",
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom --verbose",
    "coverage": "node scripts/test.js --env=jsdom --coverage",
    "build-css": "node-sass --source-map true --include-path src/styles/scss src/styles/scss/index.scss  src/styles/css/index.css",
    "watch-css": "node-sass src/styles/scss/index.scss -wo src/styles/css"
  },
  "keywords": [],
  "license": "MIT",
  "peerDependencies": {
    "react": "^15.3.0 || ^16.2.0",
    "react-dom": "^15.3.0 || ^16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "babel-jest": "^23.0.1",
    "babel-loader": "^8.0.0-beta.0",
    "enzyme": "^3.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "mock-browser": "^0.92.14",
    "concurrently": "^3.5.1",
    "enzyme-adapter-react-16": "^1.1.1",
    "css-loader": "^0.28.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.0.1",
    "jest-cli": "^22.4.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-render": "^1.1.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "author": "Markus Englund <markus.s.englund@gmail.com>",
  "homepage": "https://github.com/mikebesso/two-laws-fx",
  "repository": {
    "type": "git",
    "url": "git@github.com:mikebesso/two-laws-fx.git"
  },
  "dependencies": {
    "adv": "^0.1.5",
    "axios": "^0.18.0",
    "bloomer": "^0.6.3",
    "bootstrap": "^4.0.0",
    "bulma": "^0.7.1",
    "classnames": "^2.2.5",
    "firebase": "^4.12.0",
    "formik": "^0.11.11",
    "history": "^4.7.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.5",
    "moment": "^2.22.1",
    "prop-types": "^15.6.1",
    "react-google-button": "^0.5.1",
    "react-markdown": "^3.3.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "react-share": "^2.1.1",
    "reactstrap": "^5.0.0",
    "redux": "^3.7.2",
    "redux-axios": "0.0.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-observable": "^0.18.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "remove": "^0.1.5",
    "rxjs": "^5.5.8",
    "yup": "^0.24.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
